---
import Base from "../layouts/Base.astro";
---

<Base title="Nolan Â· Design Systems">
  <div class="world">
    <!-- Grain overlay -->
    <div class="grain" aria-hidden="true"></div>

    <!-- Floating ambient shapes -->
    <div class="shapes" aria-hidden="true">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>

    <!-- Main content layer -->
    <main class="content">
      <!-- Central statement -->
      <div class="statement">
        <h1 class="statement-text">nolan</h1>
        <p class="statement-sub">systems & surfaces</p>
      </div>

      <!-- Floating fragments -->
      <div class="fragments" aria-hidden="true">
        <span class="fragment" style="--x: 15%; --y: 20%; --delay: 0s;">systematic thinking</span>
        <span class="fragment" style="--x: 75%; --y: 15%; --delay: 2s;">expressive design</span>
        <span class="fragment" style="--x: 10%; --y: 70%; --delay: 4s;">constraint</span>
        <span class="fragment" style="--x: 80%; --y: 75%; --delay: 1s;">expression</span>
        <span class="fragment" style="--x: 50%; --y: 85%; --delay: 3s;">structure enables creativity</span>
      </div>

      <!-- Work list -->
      <nav class="work-list" aria-label="Projects">
        <!-- Theories -->
        <div class="work-section">
          <span class="work-section-title">theory</span>
        </div>
        <a href="/work/semantic-negotiation" class="work-item">
          <span class="work-title">Semantic Negotiation Layer</span>
        </a>
        <a href="/work/agent-credentialing" class="work-item">
          <span class="work-title">Agent Credentialing System</span>
        </a>
        <a href="/work/compositional-intent" class="work-item">
          <span class="work-title">Compositional Intent Graphs</span>
        </a>

        <!-- Case Studies -->
        <div class="work-section">
          <span class="work-section-title">case study</span>
        </div>
        <a href="/work/onboarding-digitization" class="work-item">
          <span class="work-title">Onboarding Digitization</span>
        </a>
      </nav>
    </main>

    <!-- Bottom info -->
    <footer class="info">
      <a href="mailto:hello@astronolan.com" class="info-link">email</a>
      <span class="info-divider">/</span>
      <a href="https://www.linkedin.com/in/astronolan/" class="info-link">linkedin</a>
    </footer>
  </div>
</Base>

<style>
  /* World container - full viewport */
  .world {
    position: relative;
    min-height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* Film grain overlay */
  .grain {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 1000;
    opacity: 0.03;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  /* Ambient floating shapes */
  .shapes {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.15;
    animation: drift 20s ease-in-out infinite;
  }

  .shape-1 {
    width: 40vw;
    height: 40vw;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 30vw;
    height: 30vw;
    background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, transparent 70%);
    bottom: 10%;
    right: -5%;
    animation-delay: -7s;
  }

  .shape-3 {
    width: 25vw;
    height: 25vw;
    background: radial-gradient(circle, rgba(255,255,255,0.06) 0%, transparent 70%);
    top: 40%;
    left: 50%;
    animation-delay: -14s;
  }

  @keyframes drift {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(5%, 10%) scale(1.05); }
    50% { transform: translate(-5%, 5%) scale(0.95); }
    75% { transform: translate(10%, -5%) scale(1.02); }
  }

  /* Main content */
  .content {
    position: relative;
    z-index: 10;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem 8rem;
    gap: 3rem;
  }

  /* Central statement */
  .statement {
    text-align: center;
  }

  .statement-text {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 300;
    line-height: 1;
    letter-spacing: 0.1em;
    text-transform: lowercase;
  }

  .statement-sub {
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin-top: 1rem;
    letter-spacing: 0.2em;
    text-transform: lowercase;
  }

  /* Floating fragments */
  .fragments {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 5;
  }

  .fragment {
    position: absolute;
    left: var(--x);
    top: var(--y);
    font-family: var(--font-display);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    opacity: 0;
    animation: fadeFloat 12s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes fadeFloat {
    0%, 100% { opacity: 0; transform: translate(0, 0); }
    20%, 80% { opacity: 0.4; }
    50% { opacity: 0.6; transform: translate(10px, -10px); }
  }

  /* Work list */
  .work-list {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 28rem;
  }

  .work-item {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 1.25rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.08);
    transition: all 0.2s ease;
  }

  .work-item:first-child {
    border-top: 1px solid rgba(255,255,255,0.08);
  }

  .work-title {
    font-family: var(--font-display);
    font-size: var(--font-size-base);
    transition: opacity 0.2s ease;
  }

  .work-section {
    padding: 1.5rem 0 0.75rem;
    margin-top: 1rem;
  }

  .work-section:first-child {
    margin-top: 0;
    padding-top: 0;
  }

  .work-section-title {
    font-family: var(--font-display);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    opacity: 0.4;
    text-transform: lowercase;
    letter-spacing: 0.1em;
  }

  /* Footer info */
  .info {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 20;
    display: flex;
    gap: 1rem;
    font-family: var(--font-display);
    font-size: var(--font-size-sm);
  }

  .info-link {
    opacity: 0.4;
    transition: opacity 0.2s ease;
  }

  .info-link:hover {
    opacity: 1;
  }

  .info-divider {
    opacity: 0.2;
  }

  /* Focus states */
  .info-link:focus-visible,
  .work-item:focus-visible {
    outline: 2px solid rgba(255,255,255,0.5);
    outline-offset: 2px;
  }

  /* Active/pressed states */
  .info-link:active {
    opacity: 0.6;
  }

  .work-item:active {
    background: rgba(255,255,255,0.02);
  }

  /* Hover states for work list */
  .work-item:hover {
    background: rgba(255,255,255,0.02);
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    margin-left: -0.5rem;
    margin-right: -0.5rem;
  }

  
  /* Responsive */
  @media (max-width: 768px) {
    .fragment {
      display: none;
    }

    .content {
      padding: 3rem 1.5rem 6rem;
    }
  }

  @media (max-width: 480px) {
    .statement-text {
      font-size: 2rem;
    }

    .work-title {
      font-size: var(--font-size-sm);
    }

    .info {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem 1rem;
      padding: 0 1rem;
    }

    .info-link {
      padding: 0.5rem;
      margin: -0.5rem;
    }
  }
</style>
